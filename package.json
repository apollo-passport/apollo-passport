{
  "name": "apollo-passport",
  "version": "0.0.2",
  "description": "Apollo authentication via PassportJS and JWTs, with UI",
  "main": "lib/index.js",
  "scripts": {
    "compile": "babel -d lib/ src/",
    "prepublish": "npm run compile",
    "test": "mocha --compilers js:babel-core/register \"src/**/*.spec.js\"",
    "lint": "eslint src",
    "coverage": "istanbul cover _mocha -- --compilers js:babel-core/register \"src/**/*.spec.js\" -R spec",
    "coveralls": "istanbul cover _mocha --report lcovonly -- --compilers js:babel-core/register \"src/**/*.spec.js\" -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apollo-passport/apollo-passport"
  },
  "bugs": {
    "url": "https://github.com/apollo-passport/apollo-passport/issues"
  },
  "keywords": [
    "apollo",
    "passport",
    "auth",
    "authentication"
  ],
  "author": "Gadi Cohen",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-core": "^6.10.4",
    "babel-eslint": "^6.0.4",
    "babel-plugin-syntax-async-functions": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-plugin-transform-regenerator": "^6.9.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.11.1",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "coveralls": "^2.11.9",
    "eslint": "^2.10.2",
    "eslint-plugin-jsx-control-statements": "^2.1.1",
    "eslint-plugin-react": "^5.1.1",
    "graphql-tag": "^0.1.9",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^2.5.3",
    "mocha-lcov-reporter": "^1.2.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "proxyquire": "^1.7.10",
    "regenerator-runtime": "^0.9.5",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "winston": "^2.2.0"
  },
  "peerDependencies": {
    "graphql-tag": "^0.1.7",
    "winston": "^2.2.0",
    "regenerator-runtime": "^0.9.5",
    "lodash": "^4.0.0"
  },
  "dependencies": {
    "jsonwebtoken": "^7.0.1",
    "jwt-decode": "^2.1.0"
  }
}
